# Application
NODE_ENV=development
APP_URL=http://localhost:3000

# Database - PostgreSQL
DATABASE_URL=postgresql://user:password@localhost:5432/dbname
# Optional: Connection pool settings
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Cache - Redis
REDIS_URL=redis://localhost:6379
# Optional: Redis password
REDIS_PASSWORD=

# NextAuth.js
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your-secret-key-here
NEXTAUTH_URL=http://localhost:3000

# Steam API
STEAM_API_KEY=your-steam-api-key-here
STEAM_CALLBACK_URL=http://localhost:3000/api/auth/callback/steam

# Third-party API Keys
# Add your third-party service API keys below
THIRD_PARTY_API_KEY=
THIRD_PARTY_API_SECRET=

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000
# Redis is used for distributed rate limiting across instances
RATE_LIMIT_REDIS_ENABLED=true

# Feature Toggles
FEATURE_STEAM_INTEGRATION=true
FEATURE_ANALYTICS=false
FEATURE_MAINTENANCE_MODE=false
FEATURE_NEW_UI=false

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Security
CORS_ALLOWED_ORIGINS=http://localhost:3000
SESSION_MAX_AGE=2592000

# Optional: Monitoring & Analytics
SENTRY_DSN=
ANALYTICS_ID=
