# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/market_data?schema=public"

# Redis Configuration (optional, falls back to in-memory cache)
REDIS_URL="redis://localhost:6379"

# Ingestion Configuration
INGESTION_PROVIDER="mock" # mock | coingecko
INGESTION_MARKETS="BTC-USD,ETH-USD,SPX"
INGESTION_CRON_EXPRESSION="*/15 * * * *" # Every 15 minutes
INGESTION_LOOKBACK_DAYS=30
CRON_SECRET="set-a-strong-secret"

# Cache Configuration
CACHE_TTL_SECONDS=300

# Alerting Configuration
ALERT_WEBHOOK_URL="" # Optional webhook for alerts
ALERT_MIN_SEVERITY="warning" # info | warning | critical

# Logging Configuration
LOG_LEVEL="info" # fatal | error | warn | info | debug | trace | silent
